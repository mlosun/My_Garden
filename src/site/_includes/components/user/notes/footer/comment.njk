<style>
#twikoo-comment {
  max-width: 800px;
  width: 100%;
  margin: 20px auto;
  box-sizing: border-box;
}
</style>

<div id="twikoo-comment"></div>

<script src="https://s4.zstatic.net/npm/twikoo@1.6.44/dist/twikoo.min.js"></script>
<script>
(function() {
  twikoo.init({
    envId: 'https://twikoo-mlosun.netlify.app/.netlify/functions/twikoo',
    el: '#twikoo-comment',
    lang: 'zh-CN',
    path: window.location.pathname
  });
  
  var attempts = 0;
  var timer = setInterval(function() {
    var twikoo = document.querySelector('.twikoo');
    if (!twikoo) {
      if (++attempts > 3) clearInterval(timer);
      return;
    }
    clearInterval(timer);
    twikoo.style.cssText = 'max-width:800px!important;width:100%!important;margin:0 auto!important;box-sizing:border-box!important';
    twikoo.querySelectorAll('*').forEach(function(el) {
      el.style.maxWidth = '100%';
      el.style.boxSizing = 'border-box';
    });
  }, 500);
})();
</script>